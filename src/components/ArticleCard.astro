---
const { article } = Astro.props
// console.log("article:", article)
---
 
<a  href={`/blog/${article.slug}`} class="bg-gray-800 rounded-xl cursor-pointer">
  <img
    class="object-cover object-center w-full lg:h-48 md:h-36 rounded-t-xl"
    src={`${article.image.filename}/m/360x240`}
    alt={article.image.alt}
  />
  <div class="p-4 bg-neutral-800 text-white rounded-b-xl  hover:shadow-md hover:shadow-neutral-500/50">
    <h1 class="text-2xl font-semibold lg:text-3xl">
      {article.title}
    </h1>
    <p class=" text-neutral-300 line-clamp-2 my-4">
      {article.description}
    </p>
    
  </div>
</a>