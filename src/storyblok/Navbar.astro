---
import { useStoryblokApi } from '@storyblok/astro'
const storyblokApi = useStoryblokApi()
const { data } = await storyblokApi.get('cdn/stories/config', {
  version: 'draft',
  resolve_links: 'url',
})
const navbar = data?.story?.content.Navbar
---
 
<header class="w-full h-24">
  <div class="container h-full mx-auto flex items-center justify-between">
    <a href="/">
      <h1 class="text-teal-500 text-3xl font-bold">Storyblok Astro</h1>
    </a>
    <nav>
      <ul class="flex space-x-8 text-lg font-bold">
        {
          navbar.map((menu: { link: { cached_url: any; story: { name: any } } }) => (
            <li>
              <a href={`/${menu.link.cached_url}`} class="hover:text-teal-500 transition ease-in-out duration-200">
                {menu.link.story.name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>