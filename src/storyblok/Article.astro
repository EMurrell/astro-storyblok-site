---
import { storyblokEditable, renderRichText } from "@storyblok/astro";

const { blok } = Astro.props;
const renderedRichText = renderRichText(blok.content);
---

<article {...storyblokEditable(blok)}>
  <img
    class="w-full h-72 sm:h-96 lg:h-[450px] object-cover sm:rounded-xl"
    alt={blok.image.alt}
    src={`${blok.image.filename}/m/1600x0`}
  />
  <div class="container mx-auto mb-12">
    <h1 class="text-7xl text-teal-500 font-bold mt-12 mb-8">
      {blok.title}
    </h1>
    <h2 class="text-4xl opacity-90 mb-6">
      {blok.description}
    </h2>
    <div class="prose text-neutral-300" set:html={renderedRichText} />
  </div>
</article>