---
import { storyblokEditable } from "@storyblok/astro";
import SocialLinks from "../components/SocialLinks.astro";
import { Image } from "astro:assets";
import backgroundImage from "../background-images/spiral-1.svg";
const { blok } = Astro.props;
---

<section
  class="w-full min-h-screen flex flex-col sm:relative"
  {...storyblokEditable(blok)}>
  <div
    class="flex flex-col my-auto pb-40 max-w-[90%] md:max-w-[75%] animate__animated animate__fadeIn">
    <h1
      class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl text-primary font-bold mb-6 capitalize">
      {blok.headline}
    </h1>
    <div class="animate__animated animate__fadeIn animate__delay-1s">
      <h2
        class="text-lg sm:text-xl lg:text-2xl xl:text-3xl text-zinc-300 font-light mb-6 max-w-[75%]">
        {blok.description}
      </h2>
      <SocialLinks />
    </div>
  </div>
  <Image
    src={backgroundImage}
    alt="bg"
    class="motion-safe:animate-spin-slow motion-reduce:animate-none opacity-40 sm:opacity-25 absolute -right-32 sm:-right-12 xl:right-12 2xl:center top-32 sm:top-8 sm:p-24 lg:p-20 2xl:p-0"
    height="700"
    width="700"
  />
</section>
