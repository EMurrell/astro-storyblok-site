---
import { storyblokEditable } from "@storyblok/astro";
import ContactForm from "../components/ContactForm.astro";
const { blok } = Astro.props;
---

<section
  class="w-full min-h-screen flex flex-col xl:flex-row overflow-hidden animate__animated animate__fadeIn"
  {...storyblokEditable(blok)}>
  <div class="flex flex-col my-auto pb-40 max-w-4xl xl:w-1/2 xl:pr-12">
    <h1
      class="text-5xl sm:text-6xl lg:text-7xl xl:text-8xl text-primary font-bold mb-6 capitalize">
      {blok.headline}
    </h1>

    <h2 class="text-xl sm:text-2xl lg:text-3xl text-zinc-300 font-light mb-6">
      {blok.description}
    </h2>
  </div>
  <div class="flex flex-col w-1/2 justify-start xl:pt-20 items-center">
    <ContactForm />
  </div>
</section>
