---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<div
  {...storyblokEditable(blok)}
  class="w-full bg-zinc-800 overflow-hidden max-w-lg cursor-pointer hover:shadow-md hover:shadow-zinc-500/50 transition-all ease-in-out duration-300 hover:-translate-y-px motion-reduce:hover:transform-none">
  <img
    src={blok.image.filename}
    alt={blok.image.alt}
    class="w-full h-48 xl:h-60 object-cover"
  />
  <div class="py-12 px-6">
    <p class="text-2xl text-zinc-100 font-medium">
      {blok.name}
    </p>
    <p class="text-zinc-300/60 line-clamp-1 mt-2">{blok.description}</p>
  </div>
</div>
